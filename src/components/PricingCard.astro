---
import { Icon } from "astro-icon/components";
import Button from "./Button.astro";
const {
  tier,
  most_popular,
  amount_per_month,
  title,
  description,
  btn_text,
  features,
} = Astro.props;
---

<article>
  <p>{tier}</p>
  <!-- badge -->
  {most_popular && <p class="badge">Most popular</p>}

  <!-- amount -->
  <div class="amt">
    <span>$</span>
    <p>{amount_per_month}</p>
    {amount_per_month > 0 && <span>/mo</span>}
  </div>
  <!-- title -->
  <h3>{title}</h3>
  <!-- description -->
  <p class="desc">{description}</p>
  <!-- button -->
  <Button>{btn_text}</Button>
  <!-- features -->
  <ul>
    {
      features.map((f: { checked: boolean; title: string }) => (
        <li class="feature">
          {f.checked ? (
            <Icon name="checked" width={24} />
          ) : (
            <Icon name="cross" width={24} />
          )}
          <span>{f.title}</span>
        </li>
      ))
    }
  </ul>
</article>
